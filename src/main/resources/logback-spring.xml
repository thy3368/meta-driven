<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- 属性定义 -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="meta-driven"/>
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>
    <property name="ENVIRONMENT" value="${ENVIRONMENT:-local}"/>

    <!-- ============================================ -->
    <!-- 控制台输出 (开发环境) -->
    <!-- ============================================ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %highlight(%-5level) [%X{traceId:-},%X{spanId:-}] %cyan(%logger{36}) - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ============================================ -->
    <!-- JSON 格式输出 (生产环境 - Loki/ELK) -->
    <!-- ============================================ -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.json</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.json.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"app":"${APP_NAME}","env":"${ENVIRONMENT}"}</customFields>
            <includeMdcKeyName>traceId</includeMdcKeyName>
            <includeMdcKeyName>spanId</includeMdcKeyName>
        </encoder>
    </appender>

    <!-- ============================================ -->
    <!-- 普通文本文件输出 -->
    <!-- ============================================ -->
    <appender name="TEXT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/${APP_NAME}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/${APP_NAME}.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-},%X{spanId:-}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ============================================ -->
    <!-- 异步日志 (低延迟优化) -->
    <!-- ============================================ -->
    <appender name="ASYNC_JSON" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>4096</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="JSON_FILE"/>
    </appender>

    <appender name="ASYNC_TEXT" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>4096</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>true</neverBlock>
        <includeCallerData>false</includeCallerData>
        <appender-ref ref="TEXT_FILE"/>
    </appender>

    <!-- ============================================ -->
    <!-- Profile 配置 -->
    <!-- ============================================ -->

    <!-- 本地开发环境: 控制台输出 -->
    <springProfile name="local,dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
        </root>
        <logger name="com.tanggo.fund" level="DEBUG"/>
    </springProfile>

    <!-- 生产/预发环境: 异步 JSON 文件输出 -->
    <springProfile name="prod,staging">
        <root level="INFO">
            <appender-ref ref="ASYNC_JSON"/>
        </root>
        <logger name="com.tanggo.fund" level="INFO"/>
    </springProfile>

    <!-- 可观测性测试环境: 同时输出控制台和 JSON -->
    <springProfile name="observability">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_JSON"/>
        </root>
        <logger name="com.tanggo.fund" level="DEBUG"/>
    </springProfile>

    <!-- 默认配置 (如果没有激活任何 profile) -->
    <springProfile name="default">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC_TEXT"/>
        </root>
        <logger name="com.tanggo.fund" level="DEBUG"/>
    </springProfile>

</configuration>